<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(object.errors.count, "error") %>.
    </div>
    <ul>
    <% object.errors.messages.each do |attr,msg|%>
      <li><%= attr%> <%= msg[0] %></li>
    <% end %>
    </ul>
  </div>
<% end %>